{
    "extends": "eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "rules": {
      "indent": 0, // EditorConfig
      "newline-after-var": 0,
      "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "never"
      }],
      "new-cap": 0,
      "quotes": ["error", "single"],
      "require-jsdoc": 0,
      "func-style": ["error", "declaration", {
        "allowArrowFunctions": true
      }]
    },
    "plugins": ["html"]
  }
