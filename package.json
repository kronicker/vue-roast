{
  "name": "vue-roast",
  "version": "0.2.0",
  "description": "Vue.js plugin for easy display of toast messages",
  "main": "dist/vue-roast.min.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "dev": "poi --config build/poi.dev.config.js",
    "build": "poi build --config build/poi.prod.config.js",
    "demo:build": "poi build --config build/poi.dev.config.js",
    "demo:deploy": "npm run demo:build && surge -d https://vue-roast.surge.sh -p ./dist-demo",
    "clean": "del-cli dist/* !dist/.gitkeep dist-demo/* !dist-demo/.gitkeep",
    "release": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kronicker/vue-roast.git"
  },
  "keywords": [
    "vue",
    "toast",
    "message",
    "vuejs",
    "javascript",
    "js",
    "notification",
    "popup"
  ],
  "author": {
    "name": "Toma Zelic",
    "email": "zelic.toma@gmail.com",
    "url": "https://github.com/kronicker"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://ub.com/kronicker/vue-roast/issues"
  },
  "devDependencies": {
    "del-cli": "^1.1.0",
    "eslint": "^4.5.0",
    "eslint-config-eslint": "^4.0.0",
    "eslint-plugin-html": "^3.2.0",
    "node-sass": "^4.5.3",
    "poi": "^9.3.3",
    "sass-loader": "^6.0.6",
    "vue": "^2.4.2",
    "wingcss": "^1.0.0-beta"
  },
  "dependencies": {
    "lodash.truncate": "^4.4.2"
  }
}
